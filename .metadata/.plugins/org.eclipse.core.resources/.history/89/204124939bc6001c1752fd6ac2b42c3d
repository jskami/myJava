package myProgram;

public class Grade_2 {
	// 학생 성적 관리 	
	public static void main(String[] args) {
			// 학생 두 명 이상 (테스트)
			int[] stId = {1, 2, 3};
//			String stName;
			int[] kor = {80, 62, 55};
			int[] eng = {75, 60, 70}; 
			int[] mat = {80, 45, 95};
			int[] total = new int[3];
			int[] avg = new int[3];
			char[] rank = new char[5];
			
			// 학점 채점
			for(int i = 0; i <= stId.length; i++) {
				total[i] = kor[i]+eng[i]+mat[i];
				avg[i] = total[i]/3;
				if(avg[i] >=90) {
					rank[i] = 'A';
				} else if (avg[i] >= 80) {
					rank[i] = 'B';
				} else if (avg[i] >= 70) {
					rank[i] = 'C';
				} else if (avg[i] >= 60) {
					rank[i] = 'D';
				} else {
					rank[i] = 'F';
				}
				rank[i] = 1;
			}
			
			
			System.out.println("==================== 성적표 ===================");
			System.out.println("  학번 \t 총점 \t 평균 \t 학점");
			System.out.println("---------------------------------------------");
//			System.out.println("   1 \t 홍길동 \t 245 \t 81 \t  B ");
//			System.out.println("   " + stId[1] + "     " + stName + "    " + total + "     " + avg + "       " + rank);
			for(int i = 0; i <= stId.length; i++) {
				System.out.println("   " + stId[i] + "     " + "    " + total[i] + "     " + avg[i] + "       " + rank[i]);
			}
				
			
		}
}
